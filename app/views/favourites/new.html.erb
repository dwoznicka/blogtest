<h1> Like this </h1>
<%= form_for(@favourite) do |f| %> 

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>

  <div class="field">
    <%= f.label :post_id %><br>
    <%= f.number_field :post_id %>
  </div>

  <div class="actions">
      <%= f.submit "Like!" %> 
  </div>
<% end %>